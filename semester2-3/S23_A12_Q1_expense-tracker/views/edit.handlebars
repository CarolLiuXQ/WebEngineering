<div class="row col-8 d-flex flex-column justify-content-center">
  <form method="POST" action="/records/{{record._id}}?_method=PUT">
    <div class="row my-3">
      <label class="col-2 col-form-label p-0" style="font-size: 10px; line-height:40px;
  vertical-align: middle;">*必填欄位</label>
      <div class="col-10">
        <h4 class="m-0" style="line-height:40px; vertical-align: middle;">請修改你的支出</h4>
      </div>
    </div>
    <div class="row mb-3">
      <label for="inputName" class="col-2 col-form-label p-0">名稱*：</label>
      <div class="col-10">
        <input name="name" class="form-control" id="inputName" value="{{record.name}}" required>
      </div>
    </div>
    <div class="row mb-3">
      <label for="inputDate" class="col-2 col-form-label p-0">日期*：
      </label>
      <div class="col-10">
        <input type="date" name="date" class="form-control" id="inputDate" value="{{record.date}}" required>
      </div>
    </div>
    <div class="row mb-3">
      <label for="category" class="col-2 col-form-label p-0">類別*：</label>
      <div class="col-10">
        <select class="form-select" id="category" name="category" required>
          {{!-- <option selected>Select</option> --}}
          <option value="home" {{#isEqual "home" record.category}}selected{{/isEqual}}>家居物業</option>
          <option value="transport" {{#isEqual "transport" record.category}}selected{{/isEqual}}>交通出行</option>
          <option value="entertainment" {{#isEqual "entertainment" record.category}}selected{{/isEqual}}>休閒娛樂
          </option>
          <option value="food" {{#isEqual "food" record.category}}selected{{/isEqual}}>餐飲食品</option>
          <option value="others" {{#isEqual "others" record.category}}selected{{/isEqual}}>其他</option>
        </select>
      </div>
    </div>
    <div class="row mb-3">
      <label for="inputAmount" class="col-2 col-form-label p-0">金額*：
      </label>
      <div class="col-10">
        <input type="number" name="amount" class="form-control" id="inputAmount" min="0" value="{{record.amount}}"
          required>
      </div>
    </div>
    <div class="d-flex flex-row justify-content-end align-items-end">
      <button type="submit" class="btn btn-outline-success col-10 mt-4">送出</button>
    </div>
  </form>
</div>